@{
    ViewData["Title"] = "Register Patient";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="container">
        <form id="registerForm" action="/registerPatient" method="post">
            <h2>Register as a patient.</h2>
            <hr/>
            <div class="form-floating mb-3">
                <label>Name</label>
                <input type="text" name="name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
            </div>
            <div class="form-floating mb-3">
                <label>Address</label>
                <input type="text" name="address" class="form-control"  aria-required="true" />
            </div>
            <div class="form-floating mb-3">
                <label>Birthdate</label>
                <input type="text" name="birthdate" class="form-control" aria-required="true" />
            </div>
            <div class="form-floating mb-3">
                <label>Gender</label>
                <input type="text" name="gender" class="form-control" aria-required="true" />
            </div>
            <div class="form-floating mb-3">
                <label>Cellphone Number</label>
                <input type="text" name="cellphoneNumber" class="form-control"  aria-required="true" />
            </div>
            <div class="form-floating mb-3">
                <label>Guardian</label>
                <input type="text" name="guardian" class="form-control"  aria-required="true" />
            </div>
            <div class="form-floating mb-3">
                <label>Password</label>
                <input type="password" name="password" class="form-control" aria-required="true" />
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>