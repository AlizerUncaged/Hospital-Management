@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Register Patient";
    var error = string.Empty;
    if (HttpContextAccessor.HttpContext.Request.Query.TryGetValue("error", out var errorString))
    {
        error = errorString.ToString();
    }
}


<div class="row container-fluid">
    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>An error occured!</strong> @error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<div class="row">
    <div class="container">
        <form id="registerForm" action="/registerPatient" method="post">
            <h2>Register as a patient.</h2>
            <hr/>
            <div class="form-floating mb-3">
                <input type="text" id="name" name="name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label for="name">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="address" name="address" class="form-control" aria-required="true"/>
                <label for="address">Address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="date" id="birthdate" name="birthdate" class="form-control" aria-required="true"/>
                <label for="birthdate">Birthdate</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="email" name="email" class="form-control" aria-required="true"/>
                <label for="email">Email</label>
            </div>
            <div class="row mb-3">
                <label class="me-2 form-label">Gender</label>
                <div class="d-flex flex-row">
                    <div class="form-check me-2">
                        <input class="form-check-input" type="radio" id="maleg" name="gender" value="male">
                        <label for="maleg" class="form-check-label">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="femaleg" name="gender" value="female">
                        <label for="femaleg" class="form-check-label">Female</label>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input type="number" id="cellphoneNumber" name="cellphoneNumber" class="form-control" aria-required="true"/>
                <label for="cellphoneNumber">Cellphone Number</label>
            </div>
            @* <div class="form-floating mb-3"> *@
            @*     <input type="text" id="guardian" name="guardian" class="form-control" aria-required="true"/> *@
            @*     <label for="guardian">Guardian</label> *@
            @* </div> *@
            <div class="form-floating mb-3">
                <input type="password" id="password" name="password" class="form-control" aria-required="true"/>
                <label for="password">Password</label>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"><i class="bi bi-box-arrow-right"></i> Register</button>
        </form>
    </div>
</div>