@{
    ViewData["Title"] = "New Appointment";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="container">
        <form id="registerForm" action="/newAppointment" method="post">
            <h2>Create a new appointment.</h2>
            <hr/>

            <div class="form-floating mb-3">
                <textarea style="height: 150px;" id="desc" rows="10" type="text" name="description" class="form-control" autocomplete="username" aria-required="true" placeholder=""></textarea>
                <label for="desc">Full Description</label>
            </div>

            <button id="registerSubmit" type="button" class="w-100 btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-wallet-fill"></i> Pay</button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"><i class="bi bi-credit-card-2-back-fill"></i> Pay</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">₱</span>
                                <input disabled value="600.00" type="text" class="form-control" aria-describedby="basic-addon1">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">₱</span>
                                <input id="user-payment" name="paid" type="text" class="form-control" aria-describedby="basic-addon1">
                                <label class="form-control" for="user-payment">Your Payment</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>